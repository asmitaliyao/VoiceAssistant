<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_image"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice Assistant"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:layout_below="@id/app_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/tips_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_tips"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tip1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击开始语音输入"
        android:textSize="12sp"
        android:layout_below="@id/tips_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tip2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1、新闻XX"
        android:textSize="12sp"
        android:layout_below="@id/tip1_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tip3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="头条/时尚/财经/国际/国内/军事/科技/社会/体育/娱乐"
        android:textSize="12sp"
        android:layout_below="@id/tip2_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tip4_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2、音乐XX"
        android:textSize="12sp"
        android:layout_below="@id/tip3_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完整音乐名"
        android:textSize="12sp"
        android:layout_below="@id/tip4_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btn_mic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_mic"/>
</RelativeLayout>