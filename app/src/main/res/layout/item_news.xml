<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/news_item_iv"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_toRightOf="@id/news_item_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/news_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="title"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_title_tv"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/news_item_id"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:text="1"/>
            <TextView
                android:id="@+id/news_item_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/base_point"
                android:textSize="12sp"
                android:layout_marginRight="8dp"
                android:text="author"/>
            <View
                android:id="@+id/base_point"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/news_item_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/base_point"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:text="date"/>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>
